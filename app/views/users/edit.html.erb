<h2>Edit details for <%= @user.name %></h2>

<%= form_for(@user) do |f| %>
  
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <%= f.submit "Edit Details" %>

<% end %>
<br />
<br />
<br />
<br />
<%= link_to("Delete Account", user_path(@user), method: :delete, data: {confirm: "Are you sure you want to your restaurant? All of its reservations will also be deleted!"}) %>