<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>

<%= link_to "Home", root_path %>

<% if current_user %>
  Signed in as <%= link_to current_user.email, user_path(current_user) %>
  <%= link_to "Log out", session_path("current"), :method => :delete %>
<% else%>
  <%= link_to "Sign Up", new_user_url %>
  <%= link_to "Sign In", new_session_url %>
<% end %>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

</header>

<main><%= yield %></main>

<footer></footer>

</body>
</html>
