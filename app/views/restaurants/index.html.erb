<h1 class="text-center">RESTAURANT VIEW (INDEX LIST)</h1>

<form action="/restaurants" method="get">

    <div class="dd_category">
      <label for="category_restaurant">Category</label>
      <select id="category_restaurant" name="category">
        <option value="nada">Please choose a category...</option>
        <% @categories.each do |category| %>
          <option value="<%=category.id%>"> <%="#{category.name}"%> </option>
        <% end %>
      </select>
    </div>

    <div class="dd_neighbourhood">
      <label for="neighbourhood_restaurant">Neighbourhood</label>
      <select id="neighbourhood_restaurant" name="neighbourhood">
        <option value="nada">Please choose a neighbourhood...</option>
        <% @neighbourhoods.each do |neighbourhood| %>
          <option value="<%=neighbourhood.id%>"> <%="#{neighbourhood.name}"%> </option>
        <% end %>
      </select>
    </div>

    <div class="dd_price_range">
      <label for="price_range_restaurant">Price range</label>
      <select id="price_range_restaurant" name="price_range">
        <option value="nada">Please choose a price range...</option>
        <option value="3">High</option>
        <option value="2">Average</option>
        <option value="1">Low</option>
      </select>
    </div>

  <div>
    <button type="submit" class="btn btn-primary">
      <h3>Search!</h3>
    </button>
  </div>

</form>

<div class="container">
  <div class="well">
  <% if flash[:search_result] %>
    <h3 class="search_result"><%= flash[:search_result] %></h3>
  <% end %>
  </div>
</div>

<hr>
<div class="container">
  <div class="row">
    <% @my_restaurants.each do |restaurant|%>
      <ul>
      <li>
        <hr>
        <h3><%=link_to("#{restaurant.name}","/restaurants/#{restaurant.id}")%></h3>
        <hr>
        <br>
        <%= image_tag(restaurant.picture_url) %>
        <br>
        <br>
        <h3><%=restaurant.summary%></h3>
        <h3>Neighbourhood: <%=restaurant.neighbourhood.name%></h3>
        <h3>Category: <%=restaurant.category.name%></h3>
        <h3>Price: <%="$" * restaurant.price_range.to_i%></h3>
      </li>
      <br>
      </ul>
    <%end%>
  </div>
</div>
