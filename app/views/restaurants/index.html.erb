<h1>RESTAURANT VIEW (INDEX LIST)</h1>

<div>
  <% @restaurants.each do |restaurant|%>
    <ul>
      <li>

      <h3><%=restaurant.name%></h3>
      <h3><%=restaurant.summary%></h3>
      <h3><%=restaurant.neighbourhood%></h3>
      <h3><%=restaurant.category_id%></h3>
      <h3><%=restaurant.price_range%></h3>
      <%= link_to(image_tag(picture_url), "/restaurants/#{restaurant.id}") %>
      </li>
      <br>
    </ul>
  <%end%>
</div>
